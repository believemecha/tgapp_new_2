<style>
  /* Styling specific to the logout button */
  .logout-button {
    background-color: #ff0000; /* Button background color */
    color: #fff; /* Button text color */
    border: none;
    padding: 10px 20px; /* Adjust the padding to change the button size */
    cursor: pointer;
  }
</style>

<div class="container">
  <% if !current_user.try(:admin?) %>
    <div style="" id="navBar" class="bg-white">
      <nav class="">
        <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
          <div class="relative flex items-center justify-between h-16">
            <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
              <!-- Mobile menu button -->
              <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:bg-gray-700 focus:text-white" aria-controls="mobile-menu" aria-expanded="false">
                <!-- Icon when menu is closed -->
                <!-- Menu open: "hidden", Menu closed: "block" -->
                <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
                <!-- Icon when menu is open -->
                <!-- Menu open: "block", Menu closed: "hidden" -->
                <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
            <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
              <div class="flex-shrink-0 flex items-center">
                <%= image_tag "logo.png", style: "max-width:200px;max-height:50px" %>
              </div>
              <div class="hidden sm:block sm:ml-6">
                <div class="flex space-x-4">
                  <a href="/" class="text-gray-700 hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>
                  <% if user_signed_in? %>
                  <a href="/dashboard/logs" class="text-gray-700 hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">Logs</a>
                  <%end%>
                  <a href="/creators/blogs" class="text-gray-700 hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">Blogs ‚úçüèª</a>
                </div>
              </div>
            </div>
            <% if user_signed_in? %>
              <%= button_to "Logout", destroy_user_session_path, method: :delete, data: { no_turbolink: true }, class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded shadow-md" %>
            <% end %>
          </div>
        </div>
        <!-- Mobile menu, show/hide based on menu state. -->
        <div class="sm:hidden" id="mobile-menu">
          <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="/" class="text-gray-700 hover:bg-gray-200 block px-3 py-2 rounded-md text-base font-medium">Dashboard</a>
            <a href="/dashboard/logs" class="text-gray-700 hover:bg-gray-200 block px-3 py-2 rounded-md text-base font-medium">Logs</a>
            <a href="/creators/blogs" class="text-gray-700 hover:bg-gray-200 block px-3 py-2 rounded-md text-base font-medium">Blogs ‚úçüèª</a>
          </div>
        </div>
      </nav>
    </div>
  <% end %>
  <div class="container">
    <p class="bg-green-500 text-white m-2"><%= notice %></p>
    <p class="bg-red-500 text-white m-2"><%= alert %></p>
    <%= yield %>
  </div>
</div>
