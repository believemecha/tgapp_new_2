    <div class="flex-1">
        <div class="hidden md:block w-100 bg-slate-600 py-2">
            <button id="sidebar-toggle-button" class="hidden md:block  bg-gray-600 text-white rounded-md" onclick="toggleSidebar()">
            <p class="mx-2 px-2">
                <svg data-name="Layer 3" xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" viewBox="0 0 32 128" fill="#fff"><path d="M97.092 36.078H30.908a2.111 2.111 0 0 0 0 4.222h66.184a2.111 2.111 0 0 0 0-4.222zM97.092 61.889H30.908a2.111 2.111 0 0 0 0 4.222h66.184a2.111 2.111 0 0 0 0-4.222zM97.092 87.7H30.908a2.111 2.111 0 0 0 0 4.222h66.184a2.111 2.111 0 0 0 0-4.222z"/></svg>
            </p>
            </button>
        </div>
        <%=yield%>
    </div>
</div>

<script>
    function toggleSidebar() {
        const toogleButton = document.getElementById("sidebar-toggle-button");
        const sidebar = document.getElementById("sidebar");
        if(sidebar.style.display == "none"){
            sidebar.style.display = "";
            toogleButton.classList.add("rotate-0");
        }
        else{
            sidebar.style.display = "none";
            toogleButton.classList.add("rotate-180");
        }
    }
</script>