<div class="max-w-md mx-auto px-2">
  <h2 class="text-2xl font-bold mb-4">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, class: "block mb-1" do %>
        New password 
        <% if @minimum_password_length %>
          (<span class="font-semibold"><%= @minimum_password_length %></span> characters minimum)
        <% end %>
      <% end %>
      <%= f.password_field :password, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200", autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm new password", class: "block mb-1" %>
      <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200", autocomplete: "new-password" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Change my password", class: "w-full bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
