<div class="container mx-auto">
  <div class="flex flex-wrap my-2">
    <div class="w-full md:w-1/2 md:pr-4">
      <%= image_tag(url_for("/logo.png"), style: "width:100%;height:200px") %>
    </div>
    <div class="w-full md:w-1/2 p-2">
      <h3 class="text-xl font-bold mb-6 text-center">Sign Up</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input mt-1 block w-full' %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-input mt-1 block w-full' %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: 'block text-gray-700 text-sm font-bold mb-2' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input mt-1 block w-full' %>
        </div>

        <div class="text-center">
          <%= f.submit "Sign up", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
